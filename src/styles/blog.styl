// 博客页面样式

// 主内容区样式
main 
  width: calc(100% - 2em)
  max-width: 100%
  margin: 0

// 头图样式
.hero-image 
  width: 100%
  
  img 
    display: block
    margin: 0 auto
    border-radius: 12px
    box-shadow: var(--box-shadow)

// 文章内容区
.prose 
  width: 90%
  max-width: 720px
  margin: auto
  padding: 1em
  //color: rgb(var(--gray-dark))

// 标题样式  
.title 
  margin-bottom: 1em
  padding: 1em 0
  text-align: center
  line-height: 1
  
  h1 
    margin: 0 0 0.5em 0

// 日期样式
.date 
  margin-bottom: 0.5em
  //color: rgb(var(--gray))

// 更新日期样式  
.last-updated-on 
  font-style: italic

// 响应式调整
@media (max-width: 768px) 
  .prose 
    width: 95%
    padding: 0.75em
  
  .title 
    margin-bottom: 0.75em
    padding: 0.75em 0
    
    h1 
      font-size: 1.8rem

@media (max-width: 480px) 
  .prose 
    width: 100%
    padding: 0.5em
  
  .title 
    margin-bottom: 0.5em
    padding: 0.5em 0
    
    h1 
      font-size: 1.5rem