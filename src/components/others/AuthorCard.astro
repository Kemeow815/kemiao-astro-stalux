---
import { site } from '../../consts';
import { config_site } from '../../_config';
import { Image }  from 'astro:assets';

interface Props {
  avatarPath: any; // 接受任何图像类型
  avatarWidth?: number;
  avatarHeight?: number;
  author?: string;
}

const { 
  avatarPath, 
  avatarWidth = 100, 
  avatarHeight = 100, 
  author = config_site.author || site.author || 'Author' 
} = Astro.props;
---

<div class="card">
  <div class="auther">
    <div class="avatar-container">
      {typeof avatarPath === 'string' ? (
        <img 
          src={avatarPath} 
          alt={`${author} avatar`} 
          class="avatar"
          width={avatarWidth}
          height={avatarHeight}
        />
      ) : (
        <Image 
          src={avatarPath} 
          alt={`${author} avatar`} 
          class="avatar"
          width={avatarWidth}
          height={avatarHeight}
        />
      )}
    </div>
    <div class="name"><h2>{author}</h2></div>
    <slot name="social-links" />
  </div>
</div>

<style>
.card {
  width: 60%;
  height: 33%;
  margin: 50px auto;  
}

.auther {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}

.name {
  font-size: 1.5rem;
  margin-left: 5px;
  text-shadow: 0.25rem 0.25rem 0.5rem rgb(1, 162, 190);    
}

.avatar-container {
  margin-left: 5px;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
}

.avatar {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 响应式样式调整 */
@media (max-width: 768px) {
  .card {
    width: 90%;
    margin: 30px auto;
  }
  
  .auther {
    flex-direction: column;
    text-align: center;
  }
  
  .name {
    margin: 15px 0 10px;
  }
  
  .avatar-container {
    margin: 0;
    width: 80px;
    height: 80px;
  }
}

@media (max-width: 480px) {
  .avatar-container {
    width: 70px;
    height: 70px;
  }
  
  .name {
    font-size: 1.2rem;
  }
}
</style>