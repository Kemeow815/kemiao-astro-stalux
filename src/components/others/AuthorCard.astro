---
import { site } from '../../consts';
import { config_site } from '../../_config';
import { Image }  from 'astro:assets';

interface Props {
  avatarPath: any; // 接受任何图像类型
  avatarWidth?: number;
  avatarHeight?: number;
  author?: string;
}

const { 
  avatarPath, 
  avatarWidth = 100, 
  avatarHeight = 100, 
  author = config_site.author || site.author || 'Author' 
} = Astro.props;
---

<div class="card">
  <div class="auther">
    <div class="avatar-container">
      {typeof avatarPath === 'string' ? (
        <img 
          src={avatarPath} 
          alt={`${author} avatar`} 
          class="avatar"
          width={avatarWidth}
          height={avatarHeight}
        />
      ) : (
        <Image 
          src={avatarPath} 
          alt={`${author} avatar`} 
          class="avatar"
          width={avatarWidth}
          height={avatarHeight}
        />
      )}
    </div>
    <div class="name"><h2>{author}</h2></div>
    <slot name="social-links" />
  </div>
</div>

<style>
.card {
  width: 60%;
  height: 33%;
  margin: 50px auto;  
  background-color: rgba(0, 0, 0, 0.021); 
  backdrop-filter: blur(25px); 
  border-radius: 10px;
  border: 1px solid rgba(255, 255, 255, 0.3); 
  box-shadow: 0 10px 35px rgba(0, 0, 0, 0.226); 
}

.auther {
  display: flex;
  align-items: center;
  padding: 2px;
}

.name {
  font-size: 1.5rem;
  margin-left: 5px;
  text-shadow: 0.25rem 0.25rem 0.5rem rgb(1, 162, 190);    
}

.avatar-container {
  margin-left: 5px;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid aqua;
  box-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
}

.avatar {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
</style>