// 友链页面的样式，针对暗色背景优化

// 页面容器样式
.page-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

// 页面头部样式
.page-header {
  text-align: center;
  margin-bottom: 30px;
  padding: 20px 0;
  
  .page-title {
    font-size: 2.2rem;
    margin-bottom: 15px;
    color: #fff;
    text-shadow: 0.2rem 0.2rem 0.3rem rgb(1, 162, 190);
    letter-spacing: 1px;
  }
  
  .page-description {
    font-size: 1.1rem;
    max-width: 700px;
    margin: 0 auto;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    text-shadow: 0.1rem 0.1rem 0.2rem rgba(1, 162, 190, 0.5);
  }
}

// 友链列表样式
.friend-links {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 20px;
  margin: 30px auto;
  list-style: none;
  padding: 0;
  max-width: 1200px;
  
  .friend-link {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    
    &:hover {
      transform: translateY(-5px);
    }
    
    a {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
      border-radius: 12px;
      background-color: rgba(0, 0, 0, 0.2);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      text-decoration: none;
      height: 100%;
      color: #fff;
      transition: all 0.3s ease;
      
      &:hover {
        background-color: rgba(0, 0, 0, 0.3);
        border-color: rgba(1, 162, 190, 0.4);
        box-shadow: 0 8px 25px rgba(1, 162, 190, 0.15);
      }
    }
    
    .friend-avatar {
      margin-bottom: 15px;
      img {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid rgba(1, 162, 190, 0.5);
        box-shadow: 0 0 15px rgba(1, 162, 190, 0.2);
        transition: transform 0.6s ease, box-shadow 0.3s ease;
        
        &:hover {
          transform: rotate(360deg) scale(1.05);
          box-shadow: 0 0 20px rgba(1, 162, 190, 0.4);
        }
        
        &:not(:hover) {
          transition: transform 0.8s ease;
          transform: rotate(0deg);
        }
      }
    }
    
    .friend-content {
      text-align: center;
      width: 100%;
      
      h2 {
        margin-bottom: 8px;
        font-size: 1.2rem;
        color: #fff;
        text-shadow: 0.1rem 0.1rem 0.2rem rgb(1, 162, 190);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
      
      p {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.4;
        margin: 0;
        text-shadow: 0.05rem 0.05rem 0.1rem rgba(1, 162, 190, 0.5);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        height: 2.8em;
      }
    }
  }
}

// 添加进入动画效果
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.friend-link {
  animation: fadeInUp 0.5s ease forwards;
  opacity: 0;
}

// 为每个项目设置不同的延迟
.friend-link:nth-child(1) { animation-delay: 0.1s; }
.friend-link:nth-child(2) { animation-delay: 0.15s; }
.friend-link:nth-child(3) { animation-delay: 0.2s; }
.friend-link:nth-child(4) { animation-delay: 0.25s; }
.friend-link:nth-child(5) { animation-delay: 0.3s; }
.friend-link:nth-child(n+6) { animation-delay: 0.35s; }

// 大屏幕：5个卡片一行
@media (min-width: 1400px) {
  .friend-links {
    grid-template-columns: repeat(5, 1fr);
  }
}

// 中等屏幕：4个卡片一行
@media (max-width: 1399px) and (min-width: 1100px) {
  .friend-links {
    grid-template-columns: repeat(4, 1fr);
  }
}

// 小屏幕：3个卡片一行
@media (max-width: 1099px) and (min-width: 768px) {
  .friend-links {
    grid-template-columns: repeat(3, 1fr);
  }
}

// 平板：2个卡片一行
@media (max-width: 767px) and (min-width: 480px) {
  .page-header {
    margin-bottom: 20px;
    padding: 15px 0;
    
    .page-title {
      font-size: 1.8rem;
    }
    
    .page-description {
      font-size: 1rem;
    }
  }

  .friend-links {
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    
    .friend-link {
      a {
        padding: 15px;
      }
      
      .friend-avatar img {
        width: 70px;
        height: 70px;
      }
      
      .friend-content h2 {
        font-size: 1.1rem;
      }
      
      .friend-content p {
        font-size: 0.85rem;
      }
    }
  }
}

// 移动设备：1个卡片一行
@media (max-width: 479px) {
  .page-header {
    .page-title {
      font-size: 1.5rem;
    }
    
    .page-description {
      font-size: 0.9rem;
      padding: 0 10px;
    }
  }

  .friend-links {
    grid-template-columns: 1fr;
    gap: 15px;
    
    .friend-link {
      margin: 0;
      
      a {
        padding: 15px;
        flex-direction: row;
        justify-content: flex-start;
        text-align: left;
      }
      
      .friend-avatar {
        margin-bottom: 0;
        margin-right: 15px;
        
        img {
          width: 60px;
          height: 60px;
        }
      }
      
      .friend-content {
        text-align: left;
        
        h2 {
          margin-bottom: 5px;
        }
      }
    }
  }
}