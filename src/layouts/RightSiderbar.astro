---
import type { MarkdownHeading } from 'astro';
const { tags = [] as string[], headings = [] as MarkdownHeading[] } = Astro.props;
---

<sidebar class="right-sidebar">
  <div class="toc-container">
    <h2 class="toc-title">文章目录</h2>
    <div class="toc-message">
      目录将显示在文章中的 "contents" 标题下
    </div>
  </div>
  
  <!-- 文章分类部分 -->
  <div class="sidebar-section categories">
    <h3>文章分类</h3>
    <div class="tag-cloud">
      <a href="/categories/博客" class="category">博客</a>
      <!-- 这里可以用 Astro 动态生成分类列表 -->
    </div>
  </div>
  
  <!-- 文章标签部分 -->
  <div class="sidebar-section tags">
    <h3>文章标签</h3>
    <div class="tag-cloud">
      {tags && tags.length > 0 ? (
        tags.map((tag :string) => (
          <a href={`/tags/${tag}`} class="tag">{tag}</a>
        ))
      ) : (
        <div class="no-tags">暂无标签</div>
      )}
    </div>
  </div>
</sidebar>

<style>
  .right-sidebar {
    width: 250px;
    padding: 1.5rem 0.5rem;
    position: sticky;
    top: 20px;
    height: fit-content;
    max-height: calc(100vh - 40px);
    overflow-y: auto;
  }

  .toc-container, .sidebar-section {
    background-color: rgba(0, 0, 0, 0.192);
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.753);
    background-color: rgba(0, 0, 0, 0.1);
    margin-bottom: 1.5rem;
  }

  .toc-title, .sidebar-section h3 {
    margin-top: 0;
    margin-bottom: 0.8rem;
    font-size: 1.2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    padding-bottom: 0.5rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .toc-message {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    font-style: italic;
  }

  /* 标签云样式 */
  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag, .category {
    border-radius: 4px;
    padding: 0.2rem 0.5rem;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    transition: all 0.2s ease;
    background-color: rgba(255, 255, 255, 0.1);
  }

  .tag:hover, .category:hover {
    background-color: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
  }

  .no-tags {
    color: rgba(255, 255, 255, 0.6);
    font-style: italic;
    font-size: 0.9rem;
  }

  @media (max-width: 1024px) {
    .right-sidebar {
      width: 200px;
    }
  }

  @media (max-width: 768px) {
    .right-sidebar {
      display: none; /* 在移动设备上隐藏右侧边栏 */
    }
  }
</style>