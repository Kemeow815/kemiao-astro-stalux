        .card {
            width: 60%;
            height: 33%;
            margin: 50px auto;  
            background-color: rgba(0, 0, 0, 0.021); 
            backdrop-filter: blur(25px); 
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.3); 
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.226); 
            .auther{
                display: flex;
                align-items: center;
                padding: 2px;
                .name{
                    font-size: 1.5rem;
                    margin-left: 5px;
                    text-shadow: 0.25rem 0.25rem 0.5rem rgb(1, 162, 190); ;    
                }
                .avatar {
                    border-radius: 50%;
                    overflow: hidden;
                    margin-left: 5px;
                    display: block;
                    width: 100px;
                    height: 100px;
                    border: 2px solid aqua;
                    box-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
                    object-fit: cover;
                }
            }
        }
        .title {
            font-size: 2.0rem;
            display: flex;
            justify-content: center;
            text-shadow: 0.25rem 0.25rem 0.5rem rgb(1, 162, 190);
        }
        
        .nav {
            width: 60%;
            margin: 20px auto;
            background-color: rgba(0, 0, 0, 0.021);
            backdrop-filter: blur(25px);
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.226);
            padding: 10px 0;
            
            ul {
                display: flex;
                justify-content: center;
                list-style: none;
                padding: 0;
                margin: 0;
                
                li {
                    margin: 0 15px;
                    
                    a {
                        text-decoration: none;
                        font-size: 1.2rem;
                        color: inherit;
                        padding: 8px 15px;
                        border-radius: 5px;
                        transition: all 0.3s ease;
                        text-shadow: 0.1rem 0.1rem 0.2rem rgb(1, 162, 190);
                        
                    }
                }
            }
        }
        #textyping {
            position: relative;
            text-align: center;
            font-size: 1.5rem;
            margin: 20px auto;
            width: 60%;
            min-height: 2rem;
            color: #ffffff;
            text-shadow: 0.1rem 0.1rem 0.2rem rgb(1, 162, 190);
        }
        
        #textyping::after {
            content: '|';
            position: relative;
            animation: blink 1s infinite;
        }
        
        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0; }
        }
        
        .social-links {
            margin-left: auto;
            ul {
                display: flex;
                gap: 12px;
                flex-wrap: wrap;
                justify-content: flex-end;
                li {
                    margin: 0;
                    a {
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        width: 36px;
                        height: 36px;
                        border-radius: 50%;
                        transition: all 0.3s ease;
                        color: #ffffff;
                        
                        &:hover {
                            background-color: rgba(0, 255, 255, 0.2);
                            transform: translateY(-3px);
                            box-shadow: 0 5px 15px rgba(0, 255, 255, 0.3);
                        }
                        
                        i {
                            font-size: 1.5rem;
                        }
                    }
                }
            }
        }
        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border-width: 0;
        }