---
import type { MarkdownHeading } from 'astro';
const { tags = [] as string[], headings = [] as MarkdownHeading[] } = Astro.props;
---

<sidebar class="right-sidebar">
  <div class="toc-container">
    <h2 class="toc-title">文章目录</h2>
    {headings && headings.length > 0 ? (
      <ul class="toc-list">
        {headings.map((heading:any) => (
          <li class={`toc-item toc-item-h${heading.depth}`}>
            <a href={`#${heading.slug}`}>{heading.text}</a>
          </li>
        ))}
      </ul>
    ) : (
      <div class="toc-message">
        暂无目录
      </div>
    )}
  </div>
  
  <!-- 文章分类部分 -->
  <div class="sidebar-section categories">
    <h3>文章分类</h3>
    <div class="tag-cloud">
      <a href="/categories/博客" class="category">博客</a>
      <!-- 这里可以用 Astro 动态生成分类列表 -->
    </div>
  </div>
  
  <!-- 文章标签部分 -->
  <div class="sidebar-section tags">
    <h3>文章标签</h3>
    <div class="tag-cloud">
      {tags && tags.length > 0 ? (
        tags.map((tag :string) => (
          <a href={`/tags/${tag}`} class="tag">{tag}</a>
        ))
      ) : (
        <div class="no-tags">暂无标签</div>
      )}
    </div>
  </div>
</sidebar>

<style>
  .right-sidebar {
    width: 250px;
    padding: 1.5rem 0.5rem;
    position: sticky;
    top: 20px;
    height: fit-content;
    max-height: calc(100vh - 40px);
    overflow-y: auto;
  }

  .toc-container, .sidebar-section {
    background-color: rgba(0, 0, 0, 0.192);
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.753);
    background-color: rgba(0, 0, 0, 0.1);
    margin-bottom: 1.5rem;
  }

  .toc-title, .sidebar-section h3 {
    margin-top: 0;
    margin-bottom: 0.8rem;
    font-size: 1.2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    padding-bottom: 0.5rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .toc-message {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    font-style: italic;
  }
  
  /* 目录列表样式 */
  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: 0.5rem;
  }

  .toc-item a {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .toc-item a:hover {
    color: rgba(255, 255, 255, 1);
    text-decoration: underline;
  }

  /* 不同级别标题的缩进 */
  .toc-item-h1 { margin-left: 0; }
  .toc-item-h2 { margin-left: 0.75rem; }
  .toc-item-h3 { margin-left: 1.5rem; }
  .toc-item-h4 { margin-left: 2.25rem; font-size: 0.9em; }
  .toc-item-h5 { margin-left: 3rem; font-size: 0.85em; }
  .toc-item-h6 { margin-left: 3.75rem; font-size: 0.8em; }

  /* 标签云样式 */
  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag, .category {
    border-radius: 4px;
    padding: 0.2rem 0.5rem;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    transition: all 0.2s ease;
    background-color: rgba(255, 255, 255, 0.1);
  }

  .tag:hover, .category:hover {
    background-color: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
  }

  .no-tags {
    color: rgba(255, 255, 255, 0.6);
    font-style: italic;
    font-size: 0.9rem;
  }

  @media (max-width: 1024px) {
    .right-sidebar {
      width: 200px;
    }
  }

  @media (max-width: 768px) {
    .right-sidebar {
      display: none; /* 在移动设备上隐藏右侧边栏 */
    }
  }
</style>