.sidebar-section {
  background-color: rgba(0, 0, 0, 0.192)
  border-radius: 8px
  padding: 1rem
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.753)
  background-color: rgba(0, 0, 0, 0.1)
  margin-bottom: 1.5rem
  
  .section-header {
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 0.8rem
    padding-bottom: 0.5rem
    
    h3 {
      margin: 0
      font-size: 1.2rem
      color: rgba(255, 255, 255, 0.9)
    }
  }
  
  .section-toggle {
    background: none
    border: none
    color: rgba(255, 255, 255, 0.7)
    cursor: pointer
    padding: 0
    display: flex
    align-items: center
    justify-content: center
    transition: transform 0.3s ease
    
    &:hover {
      color: rgba(255, 255, 255, 1)
    }
    
    &.collapsed {
      transform: rotate(-90deg)
    }
  }
}

.section-content {
  max-height: 500px
  overflow-y: auto
  opacity: 1
  transition: max-height 0.3s ease, opacity 0.3s ease
  scrollbar-width: thin
  scrollbar-color: rgba(255, 255, 255, 0.3) transparent
  
  &::-webkit-scrollbar {
    width: 6px
  }
  
  &::-webkit-scrollbar-track {
    background: transparent
  }
  
  &::-webkit-scrollbar-thumb {
    background-color: rgba(255, 255, 255, 0.3)
    border-radius: 3px
  }
  
  &.collapsed {
    max-height: 0
    opacity: 0
    overflow: hidden
  }
}

.category-list {
  display: flex
  flex-direction: column
  gap: 0.5rem
  padding: 0.2rem
}

.category-tag {
  position: relative
  display: flex
  align-items: center
  justify-content: space-between
  border-radius: 6px
  padding: 0.4rem 0.6rem
  font-size: 0.85rem
  color: rgba(255, 255, 255, 0.9)
  text-decoration: none
  transition: all 0.2s ease
  background: rgba(1, 162, 190, 0.1)
  border: 1px solid rgba(1, 162, 190, 0.2)
  border-left: 3px solid rgba(1, 162, 190, 0.6)
  
  .category-name {
    flex: 1
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    font-weight: 500
  }
  
  .category-count {
    font-size: 0.75rem
    color: rgba(255, 255, 255, 0.6)
    font-weight: normal
    margin-left: 0.5rem
  }
  
  /* 悬停效果 */
  &:hover {
    background: rgba(1, 162, 190, 0.2)
    border-color: rgba(1, 162, 190, 0.4)
    border-left-color: rgba(1, 162, 190, 0.8)
    transform: translateX(2px)
    box-shadow: 0 2px 6px rgba(1, 162, 190, 0.2)
    
    .category-count {
      color: rgba(255, 255, 255, 0.8)
    }
  }
}

.no-categories {
  color: rgba(255, 255, 255, 0.6)
  font-style: italic
  font-size: 0.9rem
  padding: 0.5rem
  text-align: center
}

@keyframes shine {
  0% {
    transform: translateX(-100%)
  }
  100% {
    transform: translateX(100%)
  }
}