---
import type { CollectionEntry } from 'astro:content';
import Head from '../components/Head.vue';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.vue';
type Props = CollectionEntry<'posts'>['data'];
const { title, date, updated } = Astro.props;
import '../styles/blog.styl'
import '../styles/global.styl'
---

<html lang="zh-CN">
	<Head 
		title={title}
		description={title}
		author="站点作者"
	/>
	<body>
		<Header />
		<main>
			<div class="main-wrapper">
				<article>
					<div class="hero-image">
						<!-- 如果有特色图片可以在这里添加 -->
					</div>
					<div class="prose">
						<div class="title">
							<h1>{title}</h1>
							<div class="date">
								{date && (
									<div class="published-on">
										发布时间：<time datetime={date.toString()}>{date}</time>
									</div>
								)}
								{updated && (
									<div class="last-updated-on">
										更新时间：<time datetime={updated.toString()}>{updated}</time>
									</div>
								)}
							</div>
							<hr />
						</div>
						<slot />
					</div>
				</article>
			</div>
		</main>
		<Footer />
	</body>
	<script>
		import '../scripts/background.ts';
	</script>
	
	<!-- 添加响应式视口设置 -->
	<style is:global>
		@media (max-width: 768px) {
			html {
				font-size: 95%;
			}
		}
		
		@media (max-width: 480px) {
			html {
				font-size: 90%;
			}
		}
	</style>
</html>

